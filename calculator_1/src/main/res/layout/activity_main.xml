<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">

    <TextView
            android:layout_width="344dp"
            android:layout_height="0dp"
            android:id="@+id/tvOut"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvOut" app:layout_constraintVertical_bias="0.021">

        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/tr1">
            <Button
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/num1"
                    android:layout_weight="1"
                    android:contentDescription="1"/>
            <Button
                    android:text="2"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="2"
                    android:id="@+id/num2"/>
            <Button
                    android:text="3"
                    android:layout_weight="1"
                    android:contentDescription="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/num3"/>
            <Button
                    android:text="4"
                    android:layout_weight="1"
                    android:contentDescription="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/num4"/>
        </TableRow>
        <TableRow
                android:id="@+id/tr2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                    android:text="5"
                    android:layout_weight="1"
                    android:contentDescription="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/num5"/>
            <Button
                    android:text="6"
                    android:layout_weight="1"
                    android:contentDescription="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/num6"/>
            <Button
                    android:text="7"
                    android:layout_weight="1"
                    android:contentDescription="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/num7"/>
            <Button
                    android:text="8"
                    android:contentDescription="8"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/num8"/>
        </TableRow>
        <TableRow
                android:id="@+id/tr3"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                    android:text="9"
                    android:layout_weight="1"
                    android:contentDescription="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/num9"/>
            <Button
                    android:text="0"
                    android:layout_weight="1"
                    android:contentDescription="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/num0"/>
            <Button
                    android:text=","
                    android:layout_weight="1"
                    android:contentDescription=","
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/numComa"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/reverse"
                    android:text="--"/>
        </TableRow>
        <TableRow
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                    android:text="+"
                    android:layout_weight="1"
                    android:contentDescription="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sum"/>
            <Button
                    android:text="-"
                    android:layout_weight="1"
                    android:contentDescription="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sub"/>
            <Button
                    android:layout_weight="1"
                    android:text="*"
                    android:contentDescription="*"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mult"/>
            <Button
                    android:layout_weight="1"
                    android:text="/"
                    android:contentDescription="/"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/div"/>
        </TableRow>
        <TableRow
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                    android:text="C"
                    android:layout_weight="1"
                    android:contentDescription="C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cancel"/>
            <Button
                    android:text="="
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/eiqual"/>
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>